#set of udev rules to cope with a new device driver

SUBSYSTEM=="usb", ACTION=="add", ENV{PRODUCT}=="4b4/1245/*", RUN+="/sbin/modprobe usbfastadc.ko"

# create a symbolic link to the device in an ioboards directory with the correct
# owner set to the original device.

ACTION=="add", KERNEL=="*usbfastadc*", GROUP="users", SYMLINK+="ioboards/%k"
ACTION=="change", KERNEL=="*usbfastadc*", GROUP="users", SYMLINK+="ioboards/%k"

# Following rule that generates a link to the device containing the serial no.

ACTION=="add", KERNEL=="*usbfastadc*", ATTRS{serial}=="[A-Z]*", GROUP="users", SYMLINK+="ioboards/%s{serial}"
ACTION=="change", KERNEL=="*usbfastadc*", ATTRS{serial}=="[A-Z]*", GROUP="users", SYMLINK+="ioboards/%s{serial}"
